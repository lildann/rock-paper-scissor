<h3>rock paper scissor</h3>
<form action='/input' method='post'>
  <fieldset>
    <legend><strong><%= @player_name.upcase %></strong>, choose one of these options to play:</legend>
      <input id="rock" name="input" type="checkbox" value="rock">
      <label for="rock">r  o  c  k</label>
      <br>
      <input id="paper" name="input" type="checkbox" value="paper">
      <label for="paper">p  a  p  e  r</label>
      <br>
      <input id="scissor" name="input" type="checkbox" value="scissor">
      <label for="scissor">s  c  i  s  s  o  r</label>
      <br>
  </fieldset>
  <br>
  <input type="submit" value="did you win or lose?"/>
</form>

<div id="shapes-container">
  <div id="rock-shape"></div>
  <div id="paper-shape"></div>
  <div id="scissor-shape"></div>
</div>

<style>
  body {
    font-family: sans-serif;
  }
  #shapes-container {
    display: flex;
  }
  #paper-shape {
    background-color: orangered;
    height: 75px;
    width: 50px;
  }
  #rock-shape {
    background-color: blue;
    height: 75px;
    width: 75px;
    border-radius: 50%;
  }
  #scissor-shape {
    width: 0;
    height: 0;
    border-left: 40px solid transparent;
    border-right: 40px solid transparent;
    border-bottom: 75px solid #ff00ff;
  }
</style>

